@if (Model != null) {
	<div class="paddle" style="@paddleCss" ></div>
}

@code {
	string leftCss => $"left: {Model?.left/15}rem;";
	string topCss => $"top: {Model?.top/15}rem;";
	string widthCss => $"width: {(Model?.right - Model?.left)/15}rem;";
	string heightCss => $"height: {(Model?.bottom - Model?.top)/15}rem;";
	string colorCss =>
		$"background-color: rgb({AudioData?.BassAmplitude},{AudioData?.MiddleAmplitude},{AudioData?.TrebbleAmplitude})";
	string paddleCss => $"{leftCss} {topCss} {widthCss} {heightCss} {colorCss}";

	[Parameter] public PaddleModel? Model { get; set; }
	[Parameter] public AudioDataModel? AudioData { get; set; }
}